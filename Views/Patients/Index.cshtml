@model IEnumerable<SanVicenteHospital.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Patient Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Patient
        </a>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Document</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.id</td>
                        <td>@patient.fullname</td>
                        <td>@patient.document</td>
                        <td>@patient.age</td>
                        <td>@patient.email</td>
                        <td>@patient.phone</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@patient.id" asp-controller="Patients" class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Destroy" asp-route-id="@patient.id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No patients found. Click <strong>"Add New Patient"</strong> to register one.
        </div>
    }
</div>