@model IEnumerable<SanVicenteHospital.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Appointments Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Schedule New Appointment
        </a>
    </div>

    <!-- Filter Section -->
    <form method="get" class="mb-4 row g-3">
        <div class="col-md-4">
            <select name="patientId" class="form-select">
                <option value="">-- Filter by Patient --</option>
                @foreach (var p in ViewBag.Patients)
                {
                    <option value="@p.id">@p.fullname</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select name="doctorId" class="form-select">
                <option value="">-- Filter by Doctor --</option>
                @foreach (var d in ViewBag.Doctors)
                {
                    <option value="@d.id">@d.fullname - @d.specialty</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-filter"></i> Apply Filters
            </button>
        </div>
    </form>

    <!-- Alerts -->
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <!-- Table -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Patient</th>
                    <th>Doctor</th>
                    <th>Appointment Date</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.id</td>
                        <td>@appointment.patient?.fullname</td>
                        <td>@appointment.doctor?.fullname</td>
                        <td>@appointment.appointmentdate</td>
                        <td>
                            @if (appointment.status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (appointment.status == "Cancelled")
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                            else if (appointment.status == "Attended")
                            {
                                <span class="badge bg-success">Attended</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (appointment.status == "Pending")
                            {
                                <a asp-action="Attend" asp-route-id="@appointment.id" class="btn btn-sm btn-success me-2">
                                    <i class="bi bi-check-circle"></i> Attend
                                </a>
                                <a asp-action="Cancel" asp-route-id="@appointment.id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No actions available</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No appointments found.
        </div>
    }
</div>